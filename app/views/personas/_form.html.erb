<%= form_for(@persona) do |f| %>
  <%= render 'shared/form_error_messages', object: f.object %>

  <div class="field">
    <%= f.label :nombre %>
    <%= f.text_field :nombre %>
  </div>
  <div class="field">
    <%= f.label :apellido %>
    <%= f.text_field :apellido %>
  </div>
  <div class="field">
    <%= f.label :dni %>
    <%= f.text_field :dni %>
  </div>
  <div class="field">
    <%= f.label :telefono_fijo %>
    <%= f.text_field :telefono_fijo %>
  </div>
  <div class="field">
    <%= f.label :telefono_celular %>
    <%= f.text_field :telefono_celular %>
  </div>
  
  <%= f.fields_for(:profiles) do |builder| %>
    <%= render "#{builder.object.corresponding_form}", object: builder %><BR>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
